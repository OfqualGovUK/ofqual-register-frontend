                        <ul class="app-filter-tags">
                            @foreach (var item in appliedFilters.GradingTypes)
                            {
                                <li><a class="app-filter__tag removeFilter" data-checkbox="gradingTypes_@item.Replace(' ', '_')" href="#!"><span class="govuk-visually-hidden">Remove this filter</span> @item</a></li>
                            }


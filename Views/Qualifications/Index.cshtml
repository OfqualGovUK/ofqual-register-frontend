@{
    ViewData["Title"] = "Find a regulated qualification";
}
<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <h1 class="govuk-heading-l">Find a regulated qualification</h1>
        <p class="govuk-body">This service is currently in private beta for Ofqual users. During this period, you can also <a href="https://register.ofqual.gov.uk/" class="govuk-link">use the previous version of the service</a>.</p>
        <p class="govuk-body">Search Ofqual's Register of Regulated qualifications to:</p>

        <ul class="govuk-body">
            <li>Find out if a qualification is regulated (officially recognised) in England or Northern Ireland</li>
            <li>Compare similar qualifications to find the right one for you</li>
            <li>See detailed information about a qualification</li>
        </ul>

        <p class="govuk-body">The register includes qualifications in England and Northern Ireland.</p>

        <a href="/find-regulated-qualifications" role="button" draggable="false" class="govuk-button govuk-button--start" data-module="govuk-button">
            Start now
            <svg class="govuk-button__start-icon" xmlns="http://www.w3.org/2000/svg" width="17.5" height="19" viewBox="0 0 33 40" aria-hidden="true" focusable="false">
                <path fill="currentColor" d="M0 0h13l20 20-20 20H0l20-20z"></path>
            </svg>
        </a>

        <div class="govuk-inset-text">
            You can also <a href="/find-regulated-organisations">search for regulated awarding organisations</a>.
        </div>

    </div>
</div>
